<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.system.RoleDao">

    <resultMap id="BaseMap" type="cn.itcast.domain.system.Role">
        <id column="role_id" property="id"/>
        <result column="name" property="name"/>
        <result column="remark" property="remark"/>
        <result column="order_no" property="orderNo"/>
        <result column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
    </resultMap>

    <sql id="find">
        select * from pe_role
    </sql>

    <select id="findAll" resultMap="BaseMap">
        <include refid="find"></include>
        <if test="companyId != null and companyId != ''">
            where company_id = #{companyId}
        </if>
    </select>

    <select id="findById" resultMap="BaseMap">
        <include refid="find"></include>
        where role_id = #{id}
    </select>

    <update id="update">
        update pe_role
        <set>
            name = #{name},
            remark = #{remark},
        </set>
        where role_id = #{id}
    </update>

    <insert id="insert">
        insert into pe_role
            (
                role_id,
                name,
                remark,
                order_no,
                company_id,
                company_name
            )
        values (
            #{id},
            #{name},
            #{remark},
            #{orderNo},
            #{companyId},
            #{companyName}
        )
    </insert>

    <select id="findRoleByUserId" resultType="Integer">
        select count(user_id) from pe_role_user where role_id = #{id}
    </select>

    <delete id="delete">
        delete from pe_role where role_id = #{id}
    </delete>

</mapper>